{% extends 'base.html.twig' %}

{% block title %}Modifier mon mots de passe{% endblock %}

{% block header %}
    {% include 'partials/header.html.twig' %}
{% endblock%}


    {% block content %}


        <section>
            <div class="container">
                <div class="row">
                    {% include 'partials/menu.html.twig' %}
                    <div class="col-sm-9">
                        <section id="form" style="margin-top: 18px!important;"><!--form-->
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm-8 col-sm-offset-1">
                                        <div class="login-form"><!--login form-->

                                            <h2>Modifier mon mot de passe</h2>
                                            {{ form_start(form , {'attr': {'class': 'contact-form row', 'id' : 'main-contact-form'}}) }}
                                            <div class="form-group col-md-12">
                                                {{ form_widget(form.old_password) }}
                                            </div>
                                            <div class="form-group col-md-6">
                                                {{ form_widget(form.new_password.first) }}
                                            </div>
                                            <div class="form-group col-md-6">
                                                {{ form_widget(form.new_password.second) }}
                                            </div>
                                            <div class="form-group col-md-12">
                                                <button type="submit" class="btn btn-lg btn-primary pull-right">Enr√©gistrer les modifications</button>
                                            </div>
                                            {{ form_end(form) }}
                                        </div><!--/login form-->
                                    </div>
                                </div>
                            </div>
                        </section><!--/form-->
                    </div>
                </div>
            </div>
        </section>


    {% endblock %}


{% block footer %}
    {% include 'partials/footer.html.twig' %}
{% endblock %}

