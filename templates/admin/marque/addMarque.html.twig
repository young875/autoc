{% extends 'admin.base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block header %}
    {% include 'partials/admin.header.html.twig' %}
{% endblock %}


{% block content %}
<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('admin_home') }}">Administration</a>
            </li>
            <li class="breadcrumb-item active">Ajouter un type de boite</li>
        </ol>
        <div class="row">
            <div class="col-12">
                {% block flash %}
                    {% include 'partials/flash.html.twig' %}
                {% endblock %}
                {{ form_start(form, {'attr': {'class': 'contact-form row', 'id' : 'main-contact-form'}}) }}
                    <div class="col-sm-6 form-group">
                        {{ form_label(form.marque) }}
                        {{ form_widget(form.marque) }}
                    </div>
                    <div class="col-sm-6 form-group">
                        {{ form_label(form.imageFile) }}
                        {{ form_widget(form.imageFile ) }}
                    </div>

                <div class="col-sm-12">
                    <button type="submit" class="mt-2 btn btn-primary">Cr√©er la nouvelle marque</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <!-- /.container-fluid-->
    <!-- /.content-wrapper-->
    {% endblock %}

    {% block footer %}
    {% include 'partials/admin.footer.html.twig' %}
{% endblock %}